{% extends '::Index_Register.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block B %}
    <div id="lp-register">
        <div class="container wrapper">
            <div class="row">
                <div class="col-sm-5">
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <div class="intro-texts">
                        <h2 class="text-white" style="color: #d32f2f;">Bienvenue les Espritiens !</h2>
                        <p>Notre application a pour objectif:
                            <br>
                            <il>D'enrichisser vos connaissances à travers nos cours partagés.</il>
                            <br>
                            <il>De vous facilitez le logement et la mobilité à Esprit.</il>
                            <br>
                            <il>De suivre les actualités d'Esprit...</il>
                    </div>
                </div>
                <div class="col-sm-6 col-sm-offset-1">
                    <div class="reg-form-container">

                        <!-- Register/Login Tabs-->
                        <div class="reg-options">
                            <ul class="nav nav-tabs active">
                                <li><a href="#login" data-toggle="tab">s'identifier</a></li>
                            </ul><!--Tabs End-->
                        </div>
                        <!--Login-->
                        <div class="tab-pane" id="login">
                            <h3>Login</h3>
                            <center>
                                <h3><p class="text-muted" style="color: #d32f2f">Connectez-vous à votre compte
                                    </p></h3>
                                <br>
                                <br>
                                <!--Login Form-->
                                <form name="Login_form" id='Login_form' action="{{ path("fos_user_security_check") }}"
                                      method="post">
                                    {% if csrf_token %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                                    {% endif %}
                                    <div class="row">
                                        <div class="form-group col-xs-12">
                                            <input type="text" id="username" class="form-control input-group-lg"
                                                   name="_username" value="{{ last_username }}" required="required"
                                                   placeholder="YOUR USERNAME"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-xs-12">
                                            <input type="password" id="password" class="form-control input-group-lg"
                                                   name="_password" required="required" placeholder="YOUR PASSWORD"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-xs-12">
                                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-xs-12">
                                            <input type="submit" id="_submit" class="btn btn-primary" name="_submit"
                                                   value="{{ 'security.login.submit'|trans }}"/>
                                            <!--  <button type="submit" id="_submit" name="_submit"
          value="{{ 'security.login.submit'|trans }}"  class="btn btn-primary">azerty</button> -->
                                        </div>
                                    </div>
                                </form>
                                <!--Login Form Ends-->
                                <p><a href="/resetting/send-email">mot de passe oblié?</a></p>
                                <!--<button class="btn btn-primary">Login Now</button> -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-6">

                    <!--Social Icons-->
                    <ul class="list-inline social-icons">
                        <li><a href="#"><i class="icon ion-social-facebook"></i></a></li>
                        <li><a href="#"><i class="icon ion-social-twitter"></i></a></li>
                        <li><a href="#"><i class="icon ion-social-googleplus"></i></a></li>
                        <li><a href="#"><i class="icon ion-social-pinterest"></i></a></li>
                        <li><a href="#"><i class="icon ion-social-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="copyright">
            <p>LEADERS Team © 2018. Tous les droits sont réservés</p>
        </div>
    </div>
{% endblock %}