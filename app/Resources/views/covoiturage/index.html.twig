{% extends 'base.html.twig' %}

{% block body %}
    <h1>Covoiturages list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Lieudepart</th>
            <th>Lieuarriver</th>
            <th>Nombreplaces</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Datedepart</th>
            <th>Heuredepart</th>
            <th>Dateajout</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for covoiturage in covoiturages %}
            <tr>
                <td><a href="{{ path('covoiturage_show', { 'id': covoiturage.id }) }}">{{ covoiturage.id }}</a></td>
                <td>{{ covoiturage.lieuDepart }}</td>
                <td>{{ covoiturage.lieuArriver }}</td>
                <td>{{ covoiturage.nombrePlaces }}</td>
                <td>{{ covoiturage.description }}</td>
                <td>{{ covoiturage.prix }}</td>
                <td>{% if covoiturage.dateDepart %}{{ covoiturage.dateDepart|date('Y-m-d') }}{% endif %}</td>
                <td>{{ covoiturage.heureDepart }}</td>
                <td>{% if covoiturage.dateAjout %}{{ covoiturage.dateAjout|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('covoiturage_show', { 'id': covoiturage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('covoiturage_edit', { 'id': covoiturage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('covoiturage_new') }}">Create a new covoiturage</a>
        </li>
    </ul>
{% endblock %}
